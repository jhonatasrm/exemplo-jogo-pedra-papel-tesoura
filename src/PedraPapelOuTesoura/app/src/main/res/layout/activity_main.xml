<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/jogoMaquina"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/vitorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/derrotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/empates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <ImageButton
            android:id="@+id/pedra"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pedra"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="jogaPedra"/>

        <ImageButton
            android:id="@+id/papel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/papel"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="jogaPapel"/>

        <ImageButton
            android:id="@+id/tesoura"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tesoura"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:onClick="jogaTesoura"/>

    </LinearLayout>

</LinearLayout>